<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee"
    tools:context=".Activities.EditDepartmentFormActivity">

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/orange_three"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_nav_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_arrow_back_24">

            </ImageView>



        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dim_40">

            <TextView
                android:id="@+id/txt_editDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="7dp"
                android:text="Edit Department form Receiver"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/txt_department"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Department"
                            android:textSize="@dimen/dim_16"
                            android:textColor="#585959"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1.3">


                        </TextView>

                        <EditText
                            android:id="@+id/et_department"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:padding="6dp"
                            android:editable="false"
                            android:textSize="@dimen/_16sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/bg_login_etbox"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:paddingBottom="@dimen/_10sdp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/txt_form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Form"
                            android:textSize="@dimen/dim_16"
                            android:textColor="#585959"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1.3">


                        </TextView>

                        <EditText
                            android:id="@+id/et_form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:padding="6dp"
                            android:editable="false"
                            android:textSize="@dimen/_16sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/bg_login_etbox"/>


                    </LinearLayout>



                </LinearLayout>







            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">


            <LinearLayout
                android:id="@+id/ll_addForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/bg_spinner"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_add_circle_24" />

                <TextView
                    android:id="@+id/txt_add_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="Add Department form"
                    android:textColor="@color/white" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_40"
                android:background="@drawable/bt_create"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_create_new_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

            </LinearLayout>


            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/transparent_bg_background">


            </LinearLayout>-->

        </LinearLayout>


        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_spinner"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_add_circle_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="Add Department form"
                    android:textColor="@color/white" />


            </LinearLayout>



        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_editdepartment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



        </LinearLayout>





</LinearLayout>




</LinearLayout>